<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_notification_settings_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_settings_page_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/tv_importance_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_importance_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:labelFor="@id/spinner_notifications_importance"
        android:text="@string/notification_importance_label"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/spinner_notifications_importance"
        app:layout_constraintTop_toBottomOf="@id/tv_notification_settings_page_title" />

    <Spinner
        android:id="@+id/spinner_notifications_importance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:entries="@array/importance_names"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/tv_privacy_label"
        app:layout_constraintTop_toBottomOf="@id/tv_importance_label" />

    <TextView
        android:id="@+id/tv_privacy_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:labelFor="@id/spinner_notifications_privacy"
        android:text="@string/notifications_privacy_label"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/spinner_notifications_privacy"
        app:layout_constraintTop_toBottomOf="@id/spinner_notifications_importance" />

    <Spinner
        android:id="@+id/spinner_notifications_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="32dp"
        android:entries="@array/private_settings_names"
        app:layout_constraintBottom_toTopOf="@id/chb_expandable_notification_text"
        app:layout_constraintTop_toBottomOf="@id/tv_privacy_label" />

    <CheckBox
        android:id="@+id/chb_expandable_notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:text="@string/expandable_notification_text_chb"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/chb_show_dialog_buttons"
        app:layout_constraintTop_toBottomOf="@id/spinner_notifications_privacy" />

    <CheckBox
        android:id="@+id/chb_show_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:text="@string/show_dialog_buttons_chb"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chb_expandable_notification_text" />


</androidx.constraintlayout.widget.ConstraintLayout>
